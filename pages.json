{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^up-(.*)": "uview-plus/components/u-$1/u-$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "海丝文脉",
        "navigationBarBackgroundColor": "#2a6dd6"
      }
    }, {
      "path": "pages/dataRepository/dataRepository",
      "style": {
        "navigationBarTitleText": "闽文数仓",
        "navigationBarBackgroundColor": "#2a6dd6"
      }
    }, {
      "path": "pages/inquiry/inquiry",
      "style": {
        "navigationBarTitleText": "闽文咨询",
        "navigationBarBackgroundColor": "#2a6dd6"
      }
    }, {
      "path": "pages/userMsg/userMsg",
      "style": {
        "navigationBarTitleText": "我的",
        "navigationBarBackgroundColor": "#2a6dd6"
      }
    }, {
      "path": "pages/webView/webView",
      "style": {
        "navigationBarTitleText": "",
        "enablePullDownRefresh": false
      }
    }, {
      "path": "pages/itemDetail/itemDetail",
      "style": {
        "navigationBarTitleText": "物品详情"
      }
    },
    {
    	"path" : "pages/test/test",
    	"style" : 
    	{
    		"navigationBarTitleText" : ""
    	}
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8",
    "autoscan": true
  },
  "uniIdRouter": {},
  "tabBar": {
    // 设置底部 tab 的表现
    "color": "#333333",
    "selectedColor": "green",
    "borderStyle": "black",
    "backgroundColor": "#fff",
    "list": [
      {
        "text": "首页",
        "pagePath": "pages/index/index",
        "iconPath": "static/icon/tabBar/home_normal.png",
        "selectedIconPath": "static/icon/tabBar/home_push.png"
      },
      {
        "text": "闽文数仓",
        "pagePath": "pages/dataRepository/dataRepository",
        "iconPath": "static/icon/tabBar/Data warehouse_normal.png",
        "selectedIconPath": "static/icon/tabBar/Data warehouse_push.png"
      },
      {
        "text": "闽文咨询",
        "pagePath": "pages/inquiry/inquiry",
        "iconPath": "static/icon/tabBar/consulting_normal.png",
        "selectedIconPath": "static/icon/tabBar/consulting_push.png"
      },
      {
        "text": "我的",
        "pagePath": "pages/userMsg/userMsg",
        "iconPath": "static/icon/tabBar/my_normal.png",
        "selectedIconPath": "static/icon/tabBar/my_push.png"
      }
    ]
  }
}
