{
	"easycom": {
		"autoscan": true,
		// 注意一定要放在custom里，否则无效，https://ask.dcloud.net.cn/question/131175
		"custom": {
			"^u--(.*)": "uview-plus/components/u-$1/u-$1.vue",
			"^up-(.*)": "uview-plus/components/u-$1/u-$1.vue",
			"^u-([^-].*)": "uview-plus/components/u-$1/u-$1.vue",
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "海丝文脉",
				"navigationBarBackgroundColor": "#2a6dd6"
			}
		},
		{
			"path": "pages/dataRepository/dataRepository",
			"style": {
				"navigationBarTitleText": "闽文数仓",
				"navigationBarBackgroundColor": "#2a6dd6"
			}
		},
		{
			"path": "pages/inquiry/inquiry",
			"style": {
				"navigationBarTitleText": "闽文咨询",
				"navigationBarBackgroundColor": "#2a6dd6"
			}
		},
		{
			"path": "pages/userMsg/userMsg",
			"style": {
				"navigationBarTitleText": "我的",
				"navigationBarBackgroundColor": "#2a6dd6"
			}
		},
		{
			"path" : "pages/test/test",
			"style" : 
			{
				"navigationBarTitleText" : "测试"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8",
		"autoscan": true
	},
	"uniIdRouter": {},
	
	"tabBar": { // 设置底部 tab 的表现
		"color": "#333333",
		"selectedColor": "green",
		"borderStyle": "black",
		"backgroundColor": "#fff",
		"list": [{
			"text": "首页",
			"pagePath": "pages/index/index",
			"iconPath": "static/icon/tabBar/index_normal.png",
			"selectedIconPath": "static/icon/tabBar/index_selected.png"
		}, {
			"text": "闽文数仓",
			"pagePath": "pages/dataRepository/dataRepository",
			"iconPath": "static/icon/tabBar/data_normal.png",
			"selectedIconPath": "static/icon/tabBar/data_selected.png"
		}, {
			"text": "闽文咨询",
			"pagePath": "pages/inquiry/inquiry",
			"iconPath": "static/icon/tabBar/inquiry_normal.png",
			"selectedIconPath": "static/icon/tabBar/inquiry_selected.png"
		}, {
			"text": "我的",
			"pagePath": "pages/userMsg/userMsg",
			"iconPath": "static/icon/tabBar/user_normal.png",
			"selectedIconPath": "static/icon/tabBar/user_selected.png"
		}]
	}
}
